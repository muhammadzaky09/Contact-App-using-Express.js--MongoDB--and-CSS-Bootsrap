<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="mt-3">Edit Contact</h2>
            <% if (typeof errors !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <h4>Warning</h4>
                    <ul>
                       <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                       <% }) %>
                    </ul>
                </div>
            <% } %>

            <form method="post" action="/contact/update">
                <input type="hidden" name="oldNama" value="<%= (contact.nama) ? contact.oldNama : contact.nama %>">
                <div class="form-group my-2">
                  <label for="nama">Name</label>
                  <input type="text" class="form-control" id="nama" name="nama" placeholder="Enter name..." value="<%=contact.nama%>"required>
                </div>
                <div class="form-group my-2">
                    <label for="noHP">Phone Number</label>
                    <input type="number" class="form-control" id="noHP" name="noHP" placeholder="Enter phone number..." value="<%=contact.noHP%>"required>
                </div>
                <div class="form-group my-2">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Enter e-mail..." value="<%=contact.email%>"required>
                </div>
                

                <button type="submit" class="btn btn-primary mt-2">Submit</button>
              </form>
        </div>
    </div>
</div>